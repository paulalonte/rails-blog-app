<div class="mt-4">
  <% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <%end%>
  <div>
      <div class="d-flex justify-content-between align-items-center p-2 mb-4" style="background: #eee; border-radius: 0.5em;">
        <span style="font-size: 0.8em; color: grey">Created at: <%= @article.created_at %></span> 
        <div class="d-flex gap-1">
          <%= link_to "", edit_article_path(@article), class: 'btn btn-primary bi bi-pencil-square', title: 'edit article' %>
          <%= button_to "", @article, method: :delete, data:{
            turbo_method: :delete,
            turbo_confirm: 'Are you sure?'
          }, class: 'btn btn-danger bi bi-trash', title: 'delete article' %>
        </div>
      </div>
      <h3 class="mb-4">
        <%= @article.title %>
      </h3>

      <p>
        <%= @article.content %>
      </p>
    </div>

  <div>
    
  <div class="d-flex justify-content-between">
    <%= link_to "Back to articles", articles_path %>
  </div>
</div>
