<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-lg-8 col-md-12">
      <div class="mb-3 form-group">
        <%= form.text_field :title, class: 'form-control', placeholder: 'title', required: true %>
      </div>

      <div class="mb-3 form-group">
        <%= form.text_area :content, wrap: "soft", class: 'form-control', placeholder: 'Your content...', rows: '6', required: true, html: { whiteSpace: 'pre-wrap', overflowWrap: 'break-word' } %>
      </div>

      <div class="mb-3 form-group">
        <%= form.number_field :user_id, id: :article_user_id, class: 'form-control', value: current_user.id, type: :hidden %>
      </div>

      <div>
        <%= form.submit "Submit", class: 'btn btn-secondary'%>
      </div>
    </div>
  </div>
  
<% end %>